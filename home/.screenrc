#################################################################################
#
# ~/.screenrc
#
#################################################################################

setenv FOO bar       # Environment

startup_message off  # No welcome message
vbell off            # No visual blinking
msgwait 1            # Show messages for 1 second
defutf8 on           # Use utf8
autodetach on        # on = default
shelltitle 'bash'    # Window Title
hardcopydir $HOME    # Screenshot location
defscrollback 10000  # Buffer size
defmonitor off       # Don't write activities to window

# screen -t bash
# screen -t irssi irssi
# screen -t syslog sudo tail -f /var/log/everything.log
# screen -t ncmpcpp ncmpcpp
select 1
select 0

# Statusline
caption always "%{= wk} %-w%{= KW} [%n %t] %{-}%+w %= | @%H | %l | %Y-%m-%d %c "
