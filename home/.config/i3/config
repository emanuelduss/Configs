#
# i3 config file
# ~/.config/i3/config
#

#
# General
#

# Font
font pango:Fira Sans Medium 10

# Window Icon
for_window [all] title_window_icon yes

# Fullscreen Apps
for_window [class="Xmag"] fullscreen enable

# Default Container Layout
workspace_layout tabbed

# Color Definitions
set $color_text "#ffffff"
set $color_background "#272A34"
set $color_focused "#2777FF"
set $color_urgent "#a40000"
set $color_separator "#404552"

# Workspace Names
set $ws1  "1"
set $ws2  "2"
set $ws3  "3"
set $ws4  "4"
set $ws5  "5"
set $ws6  "6"
set $ws7  "7"
set $ws8  "8"
set $ws9  "9"
set $ws10 "10"

#
# Startup
#

# Start XDG autostart .desktop files using dex
exec --no-startup-id dex --autostart --environment i3

# Screen Lock
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --ignore-empty-password --show-failed-attempts --nofork --color=0f0f0f --pointer=default

#exec --no-startup-id nm-applet
exec --no-startup-id pasystray
exec --no-startup-id blueman-applet

#
# Key Bindings i3
#

# Windows as modifier key
set $mod Mod4

# Drag windows to their wanted position via $mod or titlebar
floating_modifier $mod
tiling_drag modifier titlebar

# Start terminal
bindsym $mod+Return exec xfce4-terminal

# Kill focused window
bindsym $mod+Shift+q kill

# Kill with middle mouse button
bindsym --whole-window $mod+button2 kill

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Basic movements
set $up l
set $down k
set $left j
set $right odiaeresis

# Change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+semicolon focus right

# Change focus using arrow keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Change focus using tab key
bindsym Mod1+Tab focus next
bindsym Mod1+Shift+Tab focus prev

# Move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+odiaeresis move right
bindsym $mod+Shift+semicolon move right

# Move workspace
bindsym $mod+Control+Left move workspace to output left
bindsym $mod+Control+Right move workspace to output right

# Move workspace using arrow keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Horizonta & vertical split
bindsym $mod+h split h
bindsym $mod+v split v

# Fullscreen
bindsym $mod+f fullscreen toggle

# Change container layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Focus the parent / child container
bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

# Switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Change workspace
bindsym $mod+n workspace next
bindsym $mod+p workspace previous

# Move workspace to other output
bindsym $mod+Mod1+Left move workspace to output left
bindsym $mod+Mod1+Right move workspace to output right

# Scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show
bindsym $mod+Control+minus [class="Xfce4-terminal"] scratchpad show

# Marks
bindsym $mod+m exec i3-input -F 'mark %s' -l 1 -P 'Mark: '
bindsym $mod+g exec i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Goto: '

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
  bindsym j resize shrink width 10 px or 10 ppt
  bindsym k resize grow height 10 px or 10 ppt
  bindsym l resize shrink height 10 px or 10 ppt
  bindsym odiaeresis resize grow width 10 px or 10 ppt
  bindsym semicolon resize grow width 10 px or 10 ppt

  # same bindings, but for the arrow keys
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

#
# Keybindings Desktop
#
# Mod1 = Alt; Mod4 = Windows

set $refresh_i3status killall -SIGUSR1 i3status

# Volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym Control+Mod1+Prior exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym Control+Mod1+Next exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Media Player
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym Control+Mod1+Right exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym Control+Mod1+Left exec --no-startup-id playerctl previous
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym Control+Mod1+Down exec --no-startup-id playerctl play-pause
bindsym XF86AudioStop exec --no-startup-id playerctl stop
bindsym Control+Mod1+Up exec --no-startup-id playerctl stop

# Screen Lock
bindsym XF86ScreenSaver exec --no-startup-id loginctl lock-session
bindsym Control+Mod1+Delete exec --no-startup-id loginctl lock-session

# Screen
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl s +500
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl s 500-

# External Screens
bindsym XF86Display exec --no-startup-id screenctl dialog
bindsym Control+$mod+Mod1+p exec --no-startup-id screenctl dialog
bindsym Control+$mod+Mod1+i exec --no-startup-id screenctl internal
bindsym Control+$mod+Mod1+e exec --no-startup-id screenctl external
bindsym Control+$mod+Mod1+r exec --no-startup-id screenctl extend right
bindsym Control+$mod+Mod1+l exec --no-startup-id screenctl extend left
bindsym Control+$mod+Mod1+c exec --no-startup-id screenctl clone

# Applications
bindsym $mod+x exec --no-startup-id thunar

# Rofi
bindsym $mod+Tab exec --no-startup-id rofi -show window -show-icons
bindsym $mod+D exec --no-startup-id "rofi -show combi -combi-modi drun,run,ssh -modes combi -show-icons"
bindsym $mod+Shift+D exec --no-startup-id rofi -show drun
bindsym $mod+period exec --no-startup-id rofi -modes emoji -show emoji

# Other
bindsym $mod+Shift+s exec --no-startup-id maim -s | xclip -selection clipboard -t image/png
bindsym Print exec --no-startup-id "maim /tmp/screenshot.png; xclip -target image/png -selection clipboard /tmp/screenshot.png; feh /tmp/screenshot.png"
bindsym $mod+o exec --no-startup-id /usr/local/bin/magnify
bindsym Control+Mod1+Shift+c exec --no-startup-id xclip -out -selection clipboard | dos2unix | xclip -in -selection clipboard

#
# i3bar
#

bar {
  status_command i3status
  colors {
    background $color_background
    statusline $color_text
    separator  $color_separator

    # item              border             bground            text
    focused_workspace   $color_focused     $color_focused     $color_text
    active_workspace    $color_separator   $color_background  $color_text
    inactive_workspace  $color_background  $color_background  $color_text
    urgent_workspace    $color_urgent      $color_urgent      $color_text
    binding_mode        $color_urgent      $color_urgent      $color_text
  }
}

#
# Color
#

# class                  border             bground            text         indicator          child_border
client.focused           $color_focused     $color_focused     $color_text  $color_separator   $color_focused
client.focused_inactive  $color_separator   $color_background  $color_text  $color_separator   $color_background
client.unfocused         $color_background  $color_background  $color_text  $color_separator   $color_background
client.urgent            $color_urgent      $color_urgent      $color_text  $color_urgent      $color_urgent
client.placeholder       $color_background  $color_background  $color_text  $color_background  $color_background
client.background        $color_background
