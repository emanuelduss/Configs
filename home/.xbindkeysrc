#
# ~/.xbindkeysrc
#

# Desktop Environment

"i3-msg workspace locked; loginctl lock-session"
    XF86ScreenSaver

"i3-msg workspace locked; loginctl lock-session"
    Control + Mod1 + Delete

"i3-msg workspace locked; propersuspend"
    XF86Sleep

"xbacklight -inc 5"
    XF86MonBrightnessUp

"xbacklight -dec 5"
    XF86MonBrightnessDown

"sleep 1; xset dpms force off"
    Mod4 + b

"pactl -- set-sink-volume 0 +5%"
    Control+Alt + Prior

"pactl -- set-sink-volume 0 -5%"
    Control+Alt + Next

"pactl -- set-sink-mute 0 toggle"
    Control+Alt + End

"pactl -- set-sink-volume 0 +5%"
    XF86AudioRaiseVolume

"pactl -- set-sink-volume 0 -5%"
    XF86AudioLowerVolume

"pactl -- set-sink-mute 0 toggle"
    XF86AudioMute

"scrot /tmp/screenshot.png; xclip -target image/png -selection clipboard /tmp/screenshot.png; feh /tmp/screenshot.png"
    Print

"xclip -out -selection clipboard | dos2unix | xclip -in -selection clipboard"
    Control + Shift + C

# Desktop Helper

"screenctl dialog"
    XF86Display

"screenctl dialog"
    control + alt + 7

"screenctl internal"
    control + Mod4 + alt + i

"screenctl external"
    control + Mod4 + alt + e

"screenctl extend right"
    control + Mod4 + alt + r

"screenctl extend left"
    control + Mod4 + alt + l

"screenctl clone"
    control + Mod4 + alt + c

"/usr/local/bin/magnify"
    Mod4 + o

# Applications

"ario"
    Mod4 + m

"xmag"
    Mod4 + z

"nautilus"
    Mod4 + x

# Playerctl

"playerctl next"
    XF86AudioNext

"playerctl next"
    control + alt + Right

"playerctl previous"
    XF86AudioPrev

"playerctl previous"
    control + alt + Left

"playerctl play-pause"
    XF86AudioPlay

"playerctl play-pause"
    control + alt + Down

"playerctl stop"
    XF86AudioStop

"playerctl stop"
    control + alt + Up
