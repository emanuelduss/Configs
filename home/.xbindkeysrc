#
# ~/.xbindkeysrc
#

# "notify-send --urgency=critical "`acpi`""
#    XF86WakeUp

# Desktop Environment
#
"i3lock -u --dpms -c 333333 --pointer default"
    XF86ScreenSaver

"propersuspend"
    XF86Sleep

"screenctl dialog"
    XF86Display

"dmenu_run -p $ -l 10 -i"
    Mod4 + p

"ario"
    Mod4 + m

"thunar"
    Mod4 + x

"urxvt -bg '#002B36' -fg '#EEE8D5'"
    Mod4 + t

"urxvt -bg '#EEE8D5' -fg '#002B36'"
    Mod4 + Shift + t

"urxvt -fg gray -bg black -e ncmpcpp"
    Mod4 + u

"/usr/local/bin/magnify"
    Mod4 + o

# Multimedia

"amixer set Master playback 5+"
    XF86AudioRaiseVolume

"amixer set Master playback 5-"
    XF86AudioLowerVolume

"amixer set Master toggle"
    XF86AudioMute

# MPD

"mpc next"
    XF86AudioNext

"mpc next"
    control + alt + Right

"mpc prev"
    XF86AudioPrev

"mpc prev"
    control + alt + Left

"mpc toggle"
    XF86AudioPlay

"mpc toggle"
    control + alt + Down

"mpc stop"
    XF86AudioStop

"mpc stop"
    control + alt + Up
