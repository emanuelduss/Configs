#
# ~/.xbindkeysrc
#

# Desktop Environment

"i3lock -u -c 333333 --pointer default; xset dpms force off"
    XF86ScreenSaver

"i3lock -u -c 333333 --pointer default; xset dpms force off"
    Control + Mod1 + Delete

"propersuspend"
    XF86Sleep

"xbacklight -inc 5"
    XF86MonBrightnessUp

"xbacklight -dec 5"
    XF86MonBrightnessDown

"sleep 1; xset dpms force off"
    Mod4 + b

"pactl -- set-sink-volume 0 +5%"
    XF86AudioRaiseVolume

"pactl -- set-sink-volume 0 -5%"
    XF86AudioLowerVolume

"pactl -- set-sink-mute 0 toggle"
    XF86AudioMute

"scrot /tmp/screenshot.png; xclip -target image/png -selection clipboard /tmp/screenshot.png; feh /tmp/screenshot.png"
    Print

# Desktop Helper

#"dmenu_run -p $ -l 10 -i"
    #Mod4 + p

"screenctl dialog"
    XF86Display

"screenctl dialog"
    control + alt + 7

"screenctl internal"
    control + Mod4 + alt + i

"screenctl external"
    control + Mod4 + alt + e

"screenctl extend right"
    control + Mod4 + alt + r

"screenctl extend left"
    control + Mod4 + alt + l

"screenctl clone"
    control + Mod4 + alt + c

"/usr/local/bin/magnify"
    Mod4 + o

# Applications

"ario"
    Mod4 + m

"thunar"
    Mod4 + x

"urxvt -bg '#002B36' -fg '#EEE8D5'"
    Mod4 + t

"urxvt -bg '#FFFFFF' -fg '#000000'"
    Mod4 + Shift + Return

"urxvt -bg '#EEE8D5' -fg '#002B36'"
    Mod4 + Shift + t

"urxvt -fg gray -bg black -e ncmpcpp"
    Mod4 + u

# MPD

"mpc next"
    XF86AudioNext

"mpc next"
    control + alt + Right

"mpc prev"
    XF86AudioPrev

"mpc prev"
    control + alt + Left

"mpc toggle"
    XF86AudioPlay

"mpc toggle"
    control + alt + Down

"mpc stop"
    XF86AudioStop

"mpc stop"
    control + alt + Up
