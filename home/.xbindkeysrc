#
# ~/.xbindkeysrc
#
# Generate using: xbindkeys --multikey

# Desktop Environment

"loginctl lock-session"
    XF86ScreenSaver

"loginctl lock-session"
    Control + Mod1 + Delete

"i3-msg workspace locked; propersuspend"
    XF86Sleep

"xbacklight -inc 5"
    XF86MonBrightnessUp

"xbacklight -dec 5"
    XF86MonBrightnessDown

"sleep 1; xset dpms force off"
    Mod4 + b

"bash -c 'sleep 0.5; xdotool type --delay 0 $(date +%F)'"
    Control + Mod4 + alt + t

"zenity  --calendar --date-format='%F' | xclip -in -selection clipboard"
    Control + Mod4 + alt + d

"pactl set-sink-volume @DEFAULT_SINK@ +1000"
    Control + Alt + Prior

"pactl set-sink-volume @DEFAULT_SINK@ +1000"
    XF86AudioRaiseVolume

"pactl set-sink-volume @DEFAULT_SINK@ -1000"
    Control + Alt + Next

"pactl set-sink-volume @DEFAULT_SINK@ -1000"
    XF86AudioLowerVolume

"pactl set-sink-mute @DEFAULT_SINK@ toggle"
   XF86AudioMute

"pactl set-source-mute @DEFAULT_SOURCE@ toggle"
   XF86AudioMicMute

"maim -s | xclip -selection clipboard -t image/png"
    Mod4 + Shift + S

"scrot /tmp/screenshot.png; xclip -target image/png -selection clipboard /tmp/screenshot.png; feh /tmp/screenshot.png"
    Print

"xclip -out -selection clipboard | dos2unix | xclip -in -selection clipboard"
    Control + Shift + C

"rofi -show window -show-icons"
    Alt + Tab

"rofi -show combi -combi-modi drun,run,ssh -modes combi -show-icons"
    Mod4 + D

"rofi -show drun"
    Mod4 + Shift + D

"rofi -modes emoji -show emoji"
    Mod4 + period

# Desktop Helper

"screenctl dialog"
    XF86Display

"screenctl dialog"
    control + alt + 7

"screenctl internal"
    control + Mod4 + alt + i

"screenctl external"
    control + Mod4 + alt + e

"screenctl extend right"
    control + Mod4 + alt + r

"screenctl extend left"
    control + Mod4 + alt + l

"screenctl clone"
    control + Mod4 + alt + c

"/usr/local/bin/magnify"
    Mod4 + o

# Applications

"thunar"
    Mod4 + x

# Music Player

"playerctl next"
    XF86AudioNext

"playerctl next"
    control + alt + Right

"playerctl previous"
    XF86AudioPrev

"playerctl previous"
    control + alt + Left

"playerctl play-pause"
    XF86AudioPlay

"playerctl play-pause"
    control + alt + Down

"playerctl stop"
    XF86AudioStop

"playerctl stop"
    control + alt + Up
