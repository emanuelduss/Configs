# "i3lock --dpms -c 333333 --pointer default >> $HOME/.i3/i3lock.log 2>&1 && sudo pm-suspend"

"propersuspend"
    XF86Sleep

"screenctl dialog"
    XF86Display

########################################################################
# Alsamixer

"screenshot"
    Print

"dmenu_run -p $ -l 10 -i"
    Mod4 + p

########################################################################
# Desktop
"ario"
    Mod4 + m

"thunar"
    Mod4 + x

"urxvt -bg '#002B36' -fg '#EEE8D5'"
    Mod4 + t

"urxvt -bg '#EEE8D5' -fg '#002B36'"
    Mod4 + Shift + t

"urxvt -fg gray -bg black -e ncmpcpp"
    Mod4 + u

########################################################################
# Multimedia (Audio und MPD)
"amixer set Master playback 5+"
    XF86AudioRaiseVolume

"amixer set Master playback 5-"
    XF86AudioLowerVolume

"amixer set Master toggle"
    XF86AudioMute

"mpc next"
    XF86AudioNext

"mpc prev"
    XF86AudioPrev

"mpc toggle"
    XF86AudioPlay

"mpc stop"
    XF86AudioStop

# EOF
