#
# ~/.inputrc
#

# Use vi mode
set editing-mode vi

# Dont't directly execute pasted content
set enable-bracketed-paste

# Directly show completion
set show-all-if-ambiguous on

# Case-insensitive completion
set completion-ignore-case on

# Highlight common prefix for command completions
set colored-completion-prefix on

# Highlight files with LS_COLORS for command completions
set colored-stats on
