!#
!# .Xdefaults
!# Konfigurationsdatei fuer X-Anwendungen
!#

!#######################################################################
!# Urxvt-Terminal

!# Fenster
URxvt.geometry:         100x30
URxvt.saveLines:        65535
URxvt.scrollBar:        false
!URxvt.iconFile:         /usr/share/icons/gnome/scalable/apps/utilities-terminal-symbolic.svg

!# Farben
#URxvt.background:       #000000
#URxvt.foreground:       #ffffff

#URxvt.background:       #0e0e0e
!URxvt.background:       #101010
!URxvt.background:       #2A211C
!URxvt.background:       #002b36
!URxvt.foreground:       #fdf6e3
!URxvt.foreground:       #EFEFEF
!URxvt.Fading: 50

!URxvt.background:       #002B36
!URxvt.foreground:       #EEE8D5

!URxvt.intensityStyles: false

!# Transparenz
!URxvt*inheritPixmap:    true
!URxvt*tintColor:        white
URxvt*shading:          50

!# Cursor
!URxvt.pointerColor:     green
#URxvt.cursorColor:      green
URxvt.cursorBlink:      true

!# Schriftart
!URxvt.font:             7x14
!URxvt.font:             9x15
!URxvt.font:             8x13
!URxvt.font:             7x13
!URxvt.font:             xft:Terminus:pixelsize=14
URxvt.font:             -*-terminus-medium-*-*-*-12-*-*-*-*-*-*-*
URxvt.boldfont:         -*-terminus-bold-*-*-*-12-*-*-*-*-*-*-*

!# Shortcuts
URxvt.keysym.M-C-1: command:\033]710;-*-terminus-medium-*-*-*-12-*-*-*-*-*-*-*\007\033]711;-*-terminus-bold-*-*-*-12-*-*-*-*-*-*-*\007
URxvt.keysym.M-C-2: command:\033]710;-*-terminus-medium-*-*-*-14-*-*-*-*-*-*-*\007\033]711;-*-terminus-bold-*-*-*-14-*-*-*-*-*-*-*\007
URxvt.keysym.M-C-3: command:\033]710;-*-terminus-medium-*-*-*-32-*-*-*-*-*-*-*\007\033]711;-*-terminus-bold-*-*-*-32-*-*-*-*-*-*-*\007

URxvt.perl-ext-common:default,font-size,clipboard,matcher,keyboard-select
URxvt.keysym.M-u:     perl:url-select:select_next
URxvt.url-launcher:   /usr/bin/firefox
URxvt.underlineURLs:  True
URxvt.matcher.button: 1

!########################################################################
!# xterm

!# Fenster
term*geometry:            80x25
xterm*saveLines:          1024
xterm*utf8:               2
xterm*scrollTtyKeypress:  true
xterm*scrollTtyOutput:    false
xterm*scrollBar:          false
xterm*jumpScroll:         true
xterm*multiScroll:        true
xterm*toolBar:            false
xterm*dynamicColors:      true
xterm*eightBitInput:      true

!# Farben
XTerm*background:         gray16
XTerm*foreground:         orange

!# Schriftart
xterm*faceName:           xft:Terminus:pixelsize=12

!#######################################################################
!# Xpdf - PDF Viewer
xpdf*enableFreetype:  yes
xpdf*antialias:       yes
xpdf*foreground:      black
xpdf*background:      white
xpdf*urlCommand:      /usr/bin/firefox %s

!# EOF
