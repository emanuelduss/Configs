#
# ~.gitconfig
#

[user]
	name = Emanuel Duss
	email = emanuel.duss@gmail.com
[credential "https://git.hsr.ch"]
	username = eduss
[credential]
	helper = cache --timeout 36000
[core]
	autocrlf = input
	safecrlf = true
	editor = vim
[alias]
	hist = log --pretty=format:\"%h %ad [%an] | %s%d \" --date=short --all --decorate
	type = cat-file -t
	dump = cat-file -p
[merge]
	tool = vimdiff
[color]
	ui = true
	status = auto
	branch = auto
	interactive = auto
	diff = auto
[push]
	default = matching
